<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="smilevle.mapper.coronaMapper">
	<insert id="insert" parameterType="java.util.HashMap">
		<![CDATA[
		insert into tbl_corona values(#{areaCode},#{localName},#{count})
		]]>
	</insert>
	
	<update id="update" parameterType="java.util.HashMap">
		<![CDATA[
		update tbl_corona set count = #{count} where areacode = #{localName}
		]]>
	</update>
	
	<select id="selectList" parameterType="java.util.HashMap" resultType="com.smilevle.corona.model.CoronaVO">
		<![CDATA[
			select * from (select rownum as rnum,
					areacode, local_name, count from (select * from tbl_corona order by count) 
					where rownum <= #{size}) where rnum >= 2	
					]]>
	</select>






